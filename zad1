		cout << "Planet name: " << planet.name << endl;
		cout << "Planet system: " << planet.planetSystem << endl;
		cout << "Planet's republic" << planet.republic << endl;
		cout << "Spicies: " << spicies << endl;
		cout << "Military rank: " << militaryRank << endl;						
	}
	
